<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/back"
    android:layout_height="match_parent"
    tools:context="com.example.taher.listview.DetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"

        android:background="@color/title"


        android:id="@+id/relativeLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></RelativeLayout>

    <TextView
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:id="@+id/Book_PublishedDate"
        android:textColor="@color/author"
        android:layout_above="@+id/book_publisher"
        android:layout_toRightOf="@+id/book_image"
        android:layout_toEndOf="@+id/book_image"
        android:layout_marginBottom="11dp" />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:scaleType="fitXY"
        android:id="@+id/book_image"

        android:layout_above="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Title"
        android:textAlignment="center"
        android:textColor="@color/title"
        android:id="@+id/book_title"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/btn_fav"
        android:layout_toRightOf="@+id/book_image"
        android:layout_toEndOf="@+id/book_image" />
    <TextView
    android:layout_width="180dp"
    android:layout_height="50dp"
    android:id="@+id/book_publisher"
    android:textColor="@color/author"
        android:layout_alignBottom="@+id/book_image"
        android:layout_toRightOf="@+id/book_image"
        android:layout_toEndOf="@+id/book_image" />
    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/book_descrepation"
        android:textColor="@color/back"
        android:text="description"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_below="@+id/book_publisher"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/book_title"
        android:layout_alignEnd="@+id/book_title" />
    <TextView
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:id="@+id/des"
        android:textColor="@color/author"
        android:layout_below="@+id/book_descrepation"
        android:layout_alignLeft="@+id/btn_fav"
        android:layout_alignStart="@+id/btn_fav"
        android:layout_marginTop="126dp" />
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@color/back"
        android:text="Add to My Favourite"
        android:layout_marginLeft="200dp"
        android:id="@+id/btn_fav" />




</RelativeLayout>
