<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    tools:context="com.example.taher.listview.Choice">


    <Button
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:id="@+id/sport"
        android:text="Sport"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/life"
        android:layout_alignStart="@+id/life"
        android:layout_marginTop="20dp" />
    <Button
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:id="@+id/life"
        android:text="Life"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_below="@+id/sport"
        android:layout_alignLeft="@+id/love"
        android:layout_alignStart="@+id/love"
        android:layout_marginTop="21dp" />
    <Button
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="Love"
        android:textStyle="bold"
        android:textSize="30dp"
        android:id="@+id/love"
        android:layout_below="@+id/life"
        android:layout_alignLeft="@+id/time"
        android:layout_alignStart="@+id/time"
        android:layout_marginTop="25dp" />
    <Button
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:id="@+id/time"
        android:text="time"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_below="@+id/love"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp" />
    <Button
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="favourite"
        android:textStyle="bold"
        android:textSize="30dp"
        android:id="@+id/favourite"
        android:layout_below="@+id/time"
        android:layout_alignLeft="@+id/time"
        android:layout_alignStart="@+id/time"
        android:layout_marginTop="16dp" />


</RelativeLayout>
